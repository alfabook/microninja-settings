#
# The default /etc/network/interfaces file shipped with Kano OS
#

auto lo
iface lo inet loopback

allow-hotplug eth0
iface eth0 inet manual
 post-up /sbin/udhcpc -p /var/run/udhcpc-eth0.pid --script=/etc/udhcpc/microninja.script -S -i eth0
 pre-down pkill -F /var/run/udhcpc-eth0.pid 2>/dev/null || /bin/true

allow-hotplug wlan0
iface wlan0 inet manual

allow-hotplug usb0
iface usb0 inet dhcp

iface default inet dhcp
